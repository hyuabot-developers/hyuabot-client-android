<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <View
        android:id="@+id/vertical_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/darker_gray" />
    <View
        android:id="@+id/horizontal_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/shuttle_destination_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/vertical_divider"
        app:layout_constraintBottom_toTopOf="@id/horizontal_divider"
        android:layout_margin="4dp"
        android:text="@string/shuttle_header_bound_for_station"
        android:textSize="11sp"
        android:textColor="@android:color/darker_gray" />
    <TextView
        android:id="@+id/shuttle_remaining_time_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/vertical_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shuttle_destination_first"
        android:layout_margin="4dp"
        android:text="@string/shuttle_remaining_time"
        android:textSize="25sp"
        android:textColor="@android:color/darker_gray" />
    <TextView
        android:id="@+id/shuttle_destination_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/vertical_divider"
        app:layout_constraintTop_toTopOf="@id/horizontal_divider"
        android:layout_margin="4dp"
        android:text="@string/shuttle_header_bound_for_terminal"
        android:textSize="11sp"
        android:textColor="@android:color/darker_gray" />
    <TextView
        android:id="@+id/shuttle_remaining_time_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/vertical_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shuttle_destination_second"
        android:layout_margin="4dp"
        android:text="@string/shuttle_remaining_time"
        android:textSize="25sp"
        android:textColor="@android:color/darker_gray" />
    <TextView
        android:id="@+id/shuttle_destination_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/vertical_divider"
        app:layout_constraintTop_toTopOf="@id/horizontal_divider"
        android:layout_margin="4dp"
        android:text="@string/shuttle_header_bound_for_jungang_station"
        android:textSize="11sp"
        android:textColor="@android:color/darker_gray" />
    <TextView
        android:id="@+id/shuttle_remaining_time_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/vertical_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shuttle_destination_third"
        android:layout_margin="4dp"
        android:text="@string/shuttle_remaining_time"
        android:textSize="25sp"
        android:textColor="@android:color/darker_gray" />
    <TextView
        android:id="@+id/shuttle_current_stop_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/vertical_divider"
        app:layout_constraintBottom_toTopOf="@id/horizontal_divider"
        android:layout_margin="4dp"
        android:text="@string/shuttle_current_stop"
        android:textSize="11sp"
        android:textColor="@android:color/darker_gray" />
    <TextView
        android:id="@+id/shuttle_current_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/vertical_divider"
        app:layout_constraintBottom_toTopOf="@id/shuttle_current_stop_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="4dp"
        android:text="@string/shuttle_tab_shuttlecock_out"
        android:textSize="25sp"
        android:textColor="@android:color/darker_gray" />
</androidx.constraintlayout.widget.ConstraintLayout>
