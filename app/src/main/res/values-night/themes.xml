<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 야간 테마 -->
    <style name="Theme.Hyuabot" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hanyang_primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hanyang_primary</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- 기본 폰트 : 고도체 -->
        <item name="android:fontFamily">@font/godo_font</item>
        <!-- 타이틀 바 삭제 -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>