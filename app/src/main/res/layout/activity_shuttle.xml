<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShuttleActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/hanyang_primary"
        android:id="@+id/shuttle_app_bar"
        app:title="셔틀버스 도착 정보"
        app:titleTextColor="@color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/shuttle_app_bar"
        android:layout_above="@id/admob_template"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shuttle_card_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:visibility="gone"
            android:layout_marginVertical="10dp"
            />
        <ProgressBar
            android:id="@+id/shuttle_card_list_loading_bar"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/shuttle_card_list_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>
    <com.google.android.ads.nativetemplates.TemplateView
        android:id="@+id/admob_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:layout_alignParentBottom="true"
        app:gnt_template_type="@layout/gnt_small_template_view"/>
</RelativeLayout>