<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/reading_room_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/reading_room_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/reading_room_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                    <TextView
                        android:id="@+id/reading_room_update_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/reading_room_recycler_view" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/reading_room_alarm_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/reading_room_card"
                android:layout_marginTop="8dp"
                android:text="@string/reading_room_alarm_description"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/reading_room_alarm_3_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:text="@string/reading_room_alarm_3_hour"
                app:backgroundTint="@color/hanyang_green"
                app:cornerRadius="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintEnd_toStartOf="@id/reading_room_alarm_4_hour"
                app:layout_constraintTop_toBottomOf="@id/reading_room_alarm_description"
                app:layout_constraintHorizontal_chainStyle="spread_inside" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/reading_room_alarm_4_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:text="@string/reading_room_alarm_4_hour"
                app:cornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reading_room_alarm_description"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/reading_room_alarm_3_hour"
                app:layout_constraintHorizontal_chainStyle="spread_inside" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reading_room_alarm_cancel_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/reading_room_alarm_3_hour"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/reading_room_running_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/reading_room_alarm_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reading_room_alarm_cancel"
                    android:visibility="gone"
                    app:backgroundTint="@color/red_bus"
                    app:cornerRadius="5dp"
                    app:layout_constraintTop_toBottomOf="@id/reading_room_running_alarm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
