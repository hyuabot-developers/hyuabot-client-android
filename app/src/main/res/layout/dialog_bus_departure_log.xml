<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/background_light">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/hanyang_blue"
            app:menu="@menu/full_screen_menu"
            app:title="@string/bus_departure_log"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bus_departure_log_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bus_departure_log_layout_1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="0.33"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bus_departure_log_layout_2"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/bus_departure_log_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bus_departure_log_date_sample"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="8dp"
                android:textColor="@android:color/primary_text_light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                app:layout_constraintVertical_weight="1.0"
                app:layout_constraintVertical_bias="0"
                android:layout_margin="8dp"
                app:contentPadding="4dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:strokeColor="@color/hanyang_blue"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toBottomOf="@id/bus_departure_log_title_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/bus_departure_log_recycler_view_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintVertical_weight="1.0"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.core.widget.NestedScrollView>
                    <TextView
                        android:id="@+id/bus_departure_log_no_data_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/bus_departure_log_no_data"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textFontWeight="700"
                        android:padding="8dp"
                        android:textColor="@android:color/primary_text_light"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="gone" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bus_departure_log_layout_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintHorizontal_weight="0.33"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/bus_departure_log_layout_1"
            app:layout_constraintEnd_toStartOf="@id/bus_departure_log_layout_3">
            <TextView
                android:id="@+id/bus_departure_log_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bus_departure_log_date_sample"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="8dp"
                android:textColor="@android:color/primary_text_light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
            />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_margin="8dp"
                app:contentPadding="4dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:strokeColor="@color/hanyang_blue"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toBottomOf="@id/bus_departure_log_title_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bus_departure_log_recycler_view_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/bus_departure_log_no_data_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/bus_departure_log_no_data"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textFontWeight="700"
                    android:padding="8dp"
                    android:textColor="@android:color/primary_text_light"
                    android:visibility="gone" />
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bus_departure_log_layout_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintHorizontal_weight="0.33"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/bus_departure_log_layout_2"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/bus_departure_log_title_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bus_departure_log_date_sample"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:padding="8dp"
                android:textColor="@android:color/primary_text_light"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_margin="8dp"
                app:contentPadding="4dp"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/cardview_light_background"
                app:strokeColor="@color/hanyang_blue"
                app:strokeWidth="2dp"
                app:layout_constraintTop_toBottomOf="@id/bus_departure_log_title_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bus_departure_log_recycler_view_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/bus_departure_log_no_data_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/bus_departure_log_no_data"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textFontWeight="700"
                    android:padding="8dp"
                    android:textColor="@android:color/primary_text_light"
                    android:visibility="gone" />
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bus_departure_log_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>
