<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="item" type="app.kobuggi.hyuabot.ui.main.ShuttleCardItem"/>
        <variable name="vm" type="app.kobuggi.hyuabot.ui.main.ShuttleViewModel"/>
    </data>

    <androidx.cardview.widget.CardView android:layout_width="200dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="16dp"
        app:contentPadding="16dp"
        android:background="@color/white"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:cardElevation="2dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/shuttle_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="출발지 → 도착지"
                android:textColor="@color/primaryTextColor"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:id="@+id/shuttle_card_time"
                android:layout_below="@id/shuttle_card_title"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="NaN 분 후"
                android:bufferType="spannable"
                android:textColor="@color/primaryTextColor"
                />

            <TextView
                android:id="@+id/shuttle_card_this_bus"
                android:layout_above="@id/shuttle_card_next_bus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="이번 버스 : 00:00 (회차)"
                android:textColor="@color/primaryTextColor"
                />
            <TextView
                android:id="@+id/shuttle_card_next_bus"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="다음 버스 : 00:00 (회차)"
                android:textColor="@color/primaryTextColor"

                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>

