<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="app.kobuggi.hyuabot.ui.menu.campus.CampusDialogViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/campus"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/hanyang_primary"
            android:padding="20dp"
            android:gravity="center"
            />
        <TextView
            android:text="@string/seoul_campus"
            android:textSize="20sp"
            android:textColor="@color/primaryTextColor"
            android:textAlignment="center"
            android:onClick="@{() -> vm.setSeoul()}"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/primaryTextColor" />
        <TextView
            android:text="@string/erica_campus"
            android:textSize="20sp"
            android:textColor="@color/primaryTextColor"
            android:textAlignment="center"
            android:onClick="@{() -> vm.setERICA()}"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</layout>
