<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp" >
            <TextView
                android:id="@+id/shuttle_realtime_stop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="24sp"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <LinearLayout
                android:id="@+id/shuttle_realtime_to_station_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_stop_name"
                app:layout_constraintStart_toStartOf="parent" >
                <TextView
                    android:id="@+id/shuttle_realtime_to_station_header_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/shuttle_bound_for_station"
                    android:textSize="20sp"
                    android:textColor="@color/primaryTextColor" />
                <TextView
                    android:id="@+id/shuttle_realtime_to_station_header_timetable"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/shuttle_show_all"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textColor="@color/hanyang_secondary" />
            </LinearLayout>
            <TextView
                android:id="@+id/shuttle_realtime_to_station_no_data"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:text="@string/shuttle_no_arrival_time"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_station_header"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shuttle_realtime_to_station_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_station_header"
                app:layout_constraintStart_toStartOf="parent" />
            <LinearLayout
                android:id="@+id/shuttle_realtime_to_campus_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_station_recycler_view"
                app:layout_constraintStart_toStartOf="parent" >
                <TextView
                    android:id="@+id/shuttle_realtime_to_campus_header_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/shuttle_bound_for_campus"
                    android:textSize="20sp"
                    android:textColor="@color/primaryTextColor" />
                <TextView
                    android:id="@+id/shuttle_realtime_to_campus_header_timetable"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/shuttle_show_all"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textColor="@color/hanyang_secondary" />
            </LinearLayout>
            <TextView
                android:id="@+id/shuttle_realtime_to_campus_no_data"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:textAlignment="center"
                android:text="@string/shuttle_no_arrival_time"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_campus_header"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shuttle_realtime_to_campus_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_campus_header"
                app:layout_constraintStart_toStartOf="parent" />
            <LinearLayout
                android:id="@+id/shuttle_realtime_to_terminal_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_campus_recycler_view"
                app:layout_constraintStart_toStartOf="parent" >
                <TextView
                    android:id="@+id/shuttle_realtime_to_terminal_header_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/shuttle_bound_for_terminal"
                    android:textSize="20sp"
                    android:textColor="@color/primaryTextColor" />
                <TextView
                    android:id="@+id/shuttle_realtime_to_terminal_header_timetable"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/shuttle_show_all"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textColor="@color/hanyang_secondary" />
            </LinearLayout>
            <TextView
                android:id="@+id/shuttle_realtime_to_terminal_no_data"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:textAlignment="center"
                android:text="@string/shuttle_no_arrival_time"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_terminal_header"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shuttle_realtime_to_terminal_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_terminal_header"
                app:layout_constraintStart_toStartOf="parent" />
            <LinearLayout
                android:id="@+id/shuttle_realtime_to_jungang_stn_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_terminal_recycler_view"
                app:layout_constraintStart_toStartOf="parent" >
                <TextView
                    android:id="@+id/shuttle_realtime_to_jungang_stn_header_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/shuttle_bound_for_jungang_stn"
                    android:textSize="20sp"
                    android:textColor="@color/primaryTextColor" />
                <TextView
                    android:id="@+id/shuttle_realtime_to_jungang_stn_header_timetable"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/shuttle_show_all"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textColor="@color/hanyang_secondary" />
            </LinearLayout>
            <TextView
                android:id="@+id/shuttle_realtime_to_jungang_stn_no_data"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:text="@string/shuttle_no_arrival_time"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_jungang_stn_header"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shuttle_realtime_to_jungang_stn_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_jungang_stn_header"
                app:layout_constraintStart_toStartOf="parent" />
            <LinearLayout
                android:id="@+id/shuttle_realtime_to_dormitory_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_jungang_stn_recycler_view"
                app:layout_constraintStart_toStartOf="parent" >
                <TextView
                    android:id="@+id/shuttle_realtime_to_dormitory_header_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/shuttle_bound_for_dormitory"
                    android:textSize="20sp"
                    android:textColor="@color/primaryTextColor" />
                <TextView
                    android:id="@+id/shuttle_realtime_to_dormitory_header_timetable"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/shuttle_show_all"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textColor="@color/hanyang_secondary" />
            </LinearLayout>
            <TextView
                android:id="@+id/shuttle_realtime_to_dormitory_no_data"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:text="@string/shuttle_no_arrival_time"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_dormitory_header"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shuttle_realtime_to_dormitory_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/shuttle_realtime_to_dormitory_header"
                app:layout_constraintStart_toStartOf="parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <ImageButton
                    android:id="@+id/add_bookmark_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_bookmark_unchecked"
                    android:background="@null"
                    app:tint="@color/primaryTextColor" />
                <ImageButton
                    android:id="@+id/info_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_info"
                    android:background="@null"
                    app:tint="@color/primaryTextColor" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/shuttle_sub_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp" >
            <TextView
                android:id="@+id/shuttle_sub_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/shuttle_sub_card_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintTop_toBottomOf="@id/shuttle_sub_card_title"
                app:layout_constraintStart_toStartOf="parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/shuttle_sub_card_subtitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shuttle_sub_card_left_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="viewStart"
                        android:textSize="16sp"
                        android:textColor="@color/primaryTextColor" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/shuttle_sub_card_left_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/shuttle_sub_card_left_no_data"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/primaryTextColor"
                        android:text="@string/out_of_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/shuttle_sub_card_right_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp"
                        android:textColor="@color/primaryTextColor" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/shuttle_sub_card_right_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/shuttle_sub_card_right_no_data"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/primaryTextColor"
                        android:text="@string/out_of_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>