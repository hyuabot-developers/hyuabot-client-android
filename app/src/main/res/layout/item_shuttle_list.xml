<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/shuttle_realtime_to_campus_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:visibility="visible" >
        <TextView
            android:id="@+id/shuttle_heading"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/shuttle_bound_for_campus"
            android:textSize="20sp"
            android:textColor="@color/primaryTextColor" />
        <TextView
            android:id="@+id/shuttle_timetable_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/shuttle_show_all"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textColor="@color/hanyang_secondary" />
    </LinearLayout>
    <TextView
        android:id="@+id/shuttle_realtime_no_data"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:textAlignment="center"
        android:text="@string/shuttle_no_arrival_time" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shuttle_realtime_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone" />
</LinearLayout>