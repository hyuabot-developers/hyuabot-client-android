<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.google.android.ads.nativetemplates.TemplateView
        android:layout_alignParentTop="true"
        android:id="@+id/home_admob_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gnt_template_type="@layout/gnt_small_template_view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_admob_template"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true">
                <!-- 메뉴 expand/shrink -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="15dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="메뉴"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:paddingVertical="5dp"
                        />
                    <TextView
                        android:id="@+id/expanded_menu_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="전체 보기"
                        android:textColor="@color/hanyang_primary"
                        android:textSize="18sp"
                        android:textAlignment="textEnd"
                        android:paddingVertical="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    >
                    <include
                        android:id="@+id/menu_shuttle_button"
                        layout="@layout/menu_button_item"
                        />
                    <include
                        android:id="@+id/menu_bus_button"
                        layout="@layout/menu_button_item"
                        />
                    <include
                        android:id="@+id/menu_subway_button"
                        layout="@layout/menu_button_item"
                        />
                    <include
                        android:id="@+id/menu_food_button"
                        layout="@layout/menu_button_item"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:id="@+id/expanded_menu"
                    android:visibility="gone"
                    >
                    <include
                        android:id="@+id/menu_library_button"
                        layout="@layout/menu_button_item"
                        />
                    <include
                        android:id="@+id/menu_contact_button"
                        layout="@layout/menu_button_item"
                        />
                    <include
                        android:id="@+id/menu_map_button"
                        layout="@layout/menu_button_item"
                        />
                    <include
                        android:id="@+id/menu_calendar_button"
                        layout="@layout/menu_button_item"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>